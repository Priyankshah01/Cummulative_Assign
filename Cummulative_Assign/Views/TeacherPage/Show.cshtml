@model Cummulative_Assign.Models.Teacher
@{
    ViewBag.Title = "Show";
}

<div id="containerShow" class="container">

    <a href="/TeacherPage/List" style="display: inline-block; margin-bottom: 10px; text-decoration: none; background-color: #007bff; color: white; padding: 8px 12px; border-radius: 5px;">Back To Teacher List</a>

    <h2>Teacher Information</h2>

    @if (Model == null)
    {
        <div class="alert alert-danger">Teacher details not found.</div>
    }
    else
    {
        <div class="mb-3">
            <strong>ID:</strong> @Model.TeacherId
        </div>
        <div class="mb-3">
            <strong>Employee Number:</strong> @Model.EmployeeNumber
        </div>
        <div class="mb-3">
            <strong>Full Name:</strong> @Model.TeacherFname @Model.TeacherLname
        </div>
        <div class="mb-3">
            <strong>Hire Date:</strong> @Model.HireDate.ToString("MM/dd/yyyy")
        </div>
        <div class="mb-3">
            <strong>Salary:</strong> @Model.Salary.ToString("")
        </div>

        <h3>Assigned Course</h3>
        <div class="mb-3">
            @if (Model.Courses != null)
            {
                <ul>
                    @foreach (var _class in Model.Courses)
                    {
                        <li><a href="/Class/Show/@_class.CourseId">@_class.CourseCode</a> - @_class.CourseName</li>
                    }
                </ul>
            }
            else
            {
                <p>No classes assigned.</p>
            }
        </div>
        <a class="mt-3 btn btn-danger" href="/TeacherPage/DeleteConfirm/@Model.TeacherId">Delete Teacher</a>
        <a class="mt-3 btn btn-danger" href="/TeacherPage/Ajax_DeleteConfirm/@Model.TeacherId">Delete Teacher with AJAX</a>
    }
</div>
