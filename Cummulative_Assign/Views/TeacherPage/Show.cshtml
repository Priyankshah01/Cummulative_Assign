@model Cummulative_Assign.Models.Teacher
@{
    ViewBag.Title = "Show";
}

<a href="/TeacherPage/List" style="display: inline-block; margin-bottom: 10px; text-decoration: none; background-color: #007bff; color: white; padding: 8px 12px; border-radius: 5px;">Back To Teacher List</a>

<h2>Course Information</h2>

<table style="width: 100%; border-collapse: collapse; border: 1px solid #ddd;">
    <tr style="background-color: #f2f2f2;">
        <th style="padding: 10px; border: 1px solid #ddd; text-align: left;">Teacher ID</th>
        <td style="padding: 10px; border: 1px solid #ddd;">@Model.TeacherId</td>
    </tr>
    <tr>
        <th style="padding: 10px; border: 1px solid #ddd; text-align: left;">Teacher First Name</th>
        <td style="padding: 10px; border: 1px solid #ddd;">@Model.TeacherFname</td>
    </tr>
    <tr style="background-color: #f2f2f2;">
        <th style="padding: 10px; border: 1px solid #ddd; text-align: left;">Teacher Last Name</th>
        <td style="padding: 10px; border: 1px solid #ddd;">@Model.TeacherLname</td>
    </tr>
    <tr>
        <th style="padding: 10px; border: 1px solid #ddd; text-align: left;">Employee Number</th>
        <td style="padding: 10px; border: 1px solid #ddd;">@Model.EmployeeNumber</td>
    </tr>
    <tr style="background-color: #f2f2f2;">
        <th style="padding: 10px; border: 1px solid #ddd; text-align: left;">Hire Date</th>
        <td style="padding: 10px; border: 1px solid #ddd;">@Model.HireDate.ToString("dd-MM-yyyy")</td>
    </tr>
    <tr>
        <th style="padding: 10px; border: 1px solid #ddd; text-align: left;">Salary</th>
        <td style="padding: 10px; border: 1px solid #ddd;">@Model.Salary</td>
    </tr>
</table>